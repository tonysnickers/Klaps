<div class="progress progress-new-top my-4">
  <div class="progress-bar" role="progressbar" style="width: 5%;" aria-valuenow="5" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<h3 class="my-3">Let's choose a genre</h3>

<%= simple_form_for [@group, @quizz_choice] do |f| %>

  <%= f.input :genre, as: :check_boxes,
              collection: ["Action", "Adventure", "Animation", "Comedy", "Crime",
                          "Documentary", "Drama", "Family", "Fantasy", "History", "Horror", "Music",
                          "Mystery", "Romance", "Thriller", "TV Movie", "War", "Western", "Science Fiction"], label: "" %>
  <div style="margin-bottom:92px;"></div>

  <%= f.submit "Next", class: "bottom-button" %>

<% end %>
