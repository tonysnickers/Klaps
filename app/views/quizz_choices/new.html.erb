<%# ------------------------------------ QUESTIONS SUR LES GENRES ---------------------------------------- %>

<div class="container-quizz position-relative">
  <div class="progress progress-new-top my-5">
    <div class="progress-bar" role="progressbar" style="width: 5%;" aria-valuenow="5" aria-valuemin="0" aria-valuemax="100"></div>
  </div>

  <br>

  <h3>Let's choose a genre</h3>


  <%= simple_form_for [@group, @quizz_choice] do |f| %>

    <%= f.input :genre, as: :check_boxes,
                collection: ["Sci-Fi", "Adventure", "Action", "Animation", "Comedy", "Romance",
                             "Crime", "Drama", "Fantasy", "Family", "History", "Horror", "Music",
                             "Mystery", "Thriller", "TV Movie", "War", "Western", "Documentary"], label: "" %>
    <div style="margin-bottom:92px;"></div>
    <%= f.submit "Next", class: "bottom-button quizz-button"  %>

  <% end %>
</div>
