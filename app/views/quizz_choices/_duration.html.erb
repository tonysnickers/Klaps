<div class="progress progress-edit-top my-4">
  <div class="progress-bar" role="progressbar" style="width: 30%;" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<br>

<h3 class="my-5">How much time do you have?</h3>

<%= simple_form_for @quizz_choice, url: add_duration_quizz_choice_path(@quizz_choice), method: :patch do |f| %>
  <div class="rangeslider">
    <%= f.input :duration,
                as: :range,
                input_html: {
                  min: 20,
                  max: 260,
                  value: 150,
                  step: 30,
                  class: 'myslider',
                  id: 'sliderRange',
                },
                label: false %>
    <p class="text-center"><span id="demo"></span> min</p>


    <% if edit %>
      <%= hidden_field_tag :edit, "true" %>
    <% end %>

    <%= f.submit "Next", class: "bottom-button" %>
  </div>
<% end %>

<script>
  var rangeslider = document.getElementById("sliderRange");
  var duration = document.getElementById("demo");

  duration.innerHTML = rangeslider.value;

  rangeslider.oninput = function() {
    duration.innerHTML = this.value;
  }
</script>
