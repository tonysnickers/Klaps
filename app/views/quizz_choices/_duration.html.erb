<div class="progress progress-edit-top my-5">
  <div class="progress-bar" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
</div>

<br>

<h3 class="my-5">Choose a duration</h3>

<%= simple_form_for @quizz_choice, url: add_duration_quizz_choice_path(@quizz_choice), method: :patch do |f| %>
  <div class="rangeslider">
    <%= f.input :duration,
                as: :range,
                input_html: {
                  min: 60,
                  max: 300,
                  value: 180,
                  step: 30,
                  class: 'myslider',
                  id: 'sliderRange'
                } %>
    <p>Your value: <span id="demo"></span> min</p>


    <% if edit %>
      <%= hidden_field_tag :edit, "true" %>
    <% end %>

    <%= f.submit "Next question", class: "bottom-button" %>
  </div>
<% end %>

<script>
  var rangeslider = document.getElementById("sliderRange");
  var duration = document.getElementById("demo");

  duration.innerHTML = rangeslider.value;

  rangeslider.oninput = function() {
    duration.innerHTML = this.value;
  }
</script>
