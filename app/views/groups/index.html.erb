<div style="margin-bottom: 100px;">
  <div class="row d-flex text-center">
    <h1 class="dash-text mb-4">Your games</h1>
  </div>

  <div class="text-center mx-3">
    <% @groups.each do |group| %>
      <%= link_to group_path(group.id), class:'add-group' do %>
        <p><%= group.name %></p>
      <% end %>
    <% end %>
  </div>
</div>
<%= link_to "New game", new_group_path(solo: false), class:'bottom-button' %>
