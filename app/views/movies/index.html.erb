<div class = "title" >
  <h1>Here are your results!</h1>
</div>
<% n = 0 %>
<% base_poster_url = "https://image.tmdb.org/t/p/original" %>
<br>

<div class="movie-container w-75 m-auto" id="draglist" data-controller = "drag">
  <% @movies.compact.each do |m| %>
    <button type="button" class="card-movie" id = "dragitem"
            data-drag-target="card" data-movie-id="<%= m.id %>"
            data-bs-toggle="modal" data-bs-target="#filmsModal" >
      <img src= "<%= m.poster %>" />
      <div class="card-movie-infos">
        <h2><%= m.name %></h2>
        <p><%= m.actor.first(3).to_s.gsub(/[\[\]\"]/,"") %></p>
        <p><%= m.year %> - <%= m.duration %> min</p>
      </div>
    </button>
  <% end %>

  <%= simple_form_for :ordered_choice, url: results_group_path(@group), data: {turbo_method: "patch"} do |f|%>
    <%= f.input :movie_order, input_html: {data: {drag_target: "input"}, value: @movies.pluck(:id), type: "hidden"} %>
    <%#= f.input :user, value: current_user %>
    <%= f.submit "Vote!", class: "bottom-button"%>
  <% end %>
</div>


<div>
  <%# Modals %>
  <div class="modal fade" id="filmsModal" tabindex="-1" aria-labelledby="filmsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <%# <div class="modal-content bg-dark"> %>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      <%# </div> %>
    </div>
  </div>
</div>
